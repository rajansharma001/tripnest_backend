{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "src", "types"],
  "exclude": ["node_modules", "dist"]
}
